<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario para tipos de contrato -->
    <record id="view_contract_type_form" model="ir.ui.view">
        <field name="name">contract.type.form</field>
        <field name="model">contract.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Contrato">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="default_duration_months"/>
                            <field name="auto_renewal"/>
                            <field name="billing_cycle"/>
                            <field name="default_monthly_fee"/>
                        </group>
                    </group>
                    <group string="Descripción">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista lista para tipos de contrato -->
    <record id="view_contract_type_tree" model="ir.ui.view">
        <field name="name">contract.type.tree</field>
        <field name="model">contract.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="default_duration_months"/>
                <field name="auto_renewal"/>
                <field name="billing_cycle"/>
                <field name="default_monthly_fee"/>
            </tree>
        </field>
    </record>

    <!-- Acción para tipos de contrato -->
    <record id="action_contract_type" model="ir.actions.act_window">
        <field name="name">Tipos de Contrato</field>
        <field name="res_model">contract.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_contract_type_tree"/>
    </record>
</odoo>