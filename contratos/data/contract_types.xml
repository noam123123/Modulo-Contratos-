<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tipo de contrato de servicios de consultoría -->
        <record id="contract_type_consulting" model="contract.type">
            <field name="name">Servicios de Consultoría</field>
            <field name="code">CONSULTING</field>
            <field name="description">Contrato para servicios de consultoría especializada</field>
            <field name="default_duration_months">6</field>
            <field name="auto_renewal">False</field>
            <field name="billing_cycle">monthly</field>
            <field name="sequence">10</field>
        </record>

        <!-- Tipo de contrato de soporte técnico -->
        <record id="contract_type_support" model="contract.type">
            <field name="name">Soporte Técnico</field>
            <field name="code">SUPPORT</field>
            <field name="description">Contrato para servicios de soporte técnico continuo</field>
            <field name="default_duration_months">12</field>
            <field name="auto_renewal">True</field>
            <field name="billing_cycle">monthly</field>
            <field name="sequence">20</field>
        </record>

        <!-- Tipo de contrato de mantenimiento -->
        <record id="contract_type_maintenance" model="contract.type">
            <field name="name">Mantenimiento</field>
            <field name="code">MAINTENANCE</field>
            <field name="description">Contrato para servicios de mantenimiento preventivo y correctivo</field>
            <field name="default_duration_months">12</field>
            <field name="auto_renewal">True</field>
            <field name="billing_cycle">quarterly</field>
            <field name="sequence">30</field>
        </record>

        <!-- Tipo de contrato de desarrollo -->
        <record id="contract_type_development" model="contract.type">
            <field name="name">Desarrollo de Software</field>
            <field name="code">DEVELOPMENT</field>
            <field name="description">Contrato para desarrollo de software personalizado</field>
            <field name="default_duration_months">3</field>
            <field name="auto_renewal">False</field>
            <field name="billing_cycle">monthly</field>
            <field name="sequence">40</field>
        </record>
    </data>
</odoo>