<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job para verificar vencimientos de contratos -->
        <record id="ir_cron_contract_expiry_check" model="ir.cron">
            <field name="name">Verificar Vencimientos de Contratos</field>
            <field name="model_id" ref="model_contract_general"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_contract_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall">False</field>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>