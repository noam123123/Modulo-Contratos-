
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="contract_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure"/>
                        
                        <!-- Header -->
                        <div class="row">
                            <div class="col-12 text-center">
                                <h1 style="color: #2E7D32;">CONTRATO DE SERVICIOS</h1>
                                <h3 style="color: #666;">República de Costa Rica</h3>
                                <hr/>
                            </div>
                        </div>

                        <!-- Contract Info -->
                        <div class="row">
                            <div class="col-6">
                                <strong>Número de Contrato:</strong> <span t-field="o.name"/>
                            </div>
                            <div class="col-6 text-right">
                                <strong>Fecha:</strong> <span t-field="o.date_start"/>
                            </div>
                        </div>

                        <br/>

                        <!-- Company Info -->
                        <div class="row">
                            <div class="col-12">
                                <h4 style="color: #2E7D32;">INFORMACIÓN DE LA EMPRESA CLIENTE</h4>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Razón Social:</strong></td>
                                        <td><span t-field="o.partner_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Cédula Jurídica:</strong></td>
                                        <td><span t-field="o.partner_id.vat"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Teléfono:</strong></td>
                                        <td><span t-field="o.partner_id.phone"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td><span t-field="o.partner_id.email"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Legal Representative -->
                        <div class="row">
                            <div class="col-12">
                                <h4 style="color: #2E7D32;">REPRESENTANTE LEGAL</h4>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Nombre:</strong></td>
                                        <td><span t-field="o.legal_representative_name"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Cargo:</strong></td>
                                        <td><span t-field="o.legal_representative_position"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Cédula:</strong></td>
                                        <td><span t-field="o.legal_representative_id_number"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td><span t-field="o.legal_representative_email"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Service Description -->
                        <div class="row">
                            <div class="col-12">
                                <h4 style="color: #2E7D32;">DESCRIPCIÓN DE SERVICIOS</h4>
                                <p><span t-field="o.service_description"/></p>
                            </div>
                        </div>

                        <!-- Financial Details -->
                        <div class="row">
                            <div class="col-12">
                                <h4 style="color: #2E7D32;">INFORMACIÓN FINANCIERA</h4>
                                <table class="table table-bordered">
                                    <tr>
                                        <th>Concepto</th>
                                        <th class="text-right">Valor</th>
                                    </tr>
                                    <tr>
                                        <td>Valor Total del Contrato</td>
                                        <td class="text-right">
                                            <span t-field="o.currency_id.symbol"/>
                                            <span t-field="o.contract_value" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr t-if="o.monthly_fee">
                                        <td>Tarifa Mensual</td>
                                        <td class="text-right">
                                            <span t-field="o.currency_id.symbol"/>
                                            <span t-field="o.monthly_fee" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr t-if="o.setup_fee">
                                        <td>Costo de Configuración</td>
                                        <td class="text-right">
                                            <span t-field="o.currency_id.symbol"/>
                                            <span t-field="o.setup_fee" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Contract Lines -->
                        <div class="row" t-if="o.contract_line_ids">
                            <div class="col-12">
                                <h4 style="color: #2E7D32;">DETALLE DE PRODUCTOS/SERVICIOS</h4>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Descripción</th>
                                            <th class="text-center">Cantidad</th>
                                            <th class="text-right">Precio Unit.</th>
                                            <th class="text-right">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.contract_line_ids" t-as="line">
                                            <td><span t-field="line.name"/></td>
                                            <td class="text-center"><span t-field="line.quantity"/></td>
                                            <td class="text-right">
                                                <span t-field="line.currency_id.symbol"/>
                                                <span t-field="line.unit_price" t-options='{"widget": "monetary", "display_currency": line.currency_id}'/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.currency_id.symbol"/>
                                                <span t-field="line.subtotal" t-options='{"widget": "monetary", "display_currency": line.currency_id}'/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Contract Terms -->
                        <div class="row">
                            <div class="col-12">
                                <h4 style="color: #2E7D32;">VIGENCIA</h4>
                                <p><strong>Duración:</strong> <span t-field="o.duration_months"/> meses</p>
                                <p><strong>Fecha de Inicio:</strong> <span t-field="o.date_start"/></p>
                                <p><strong>Fecha de Vencimiento:</strong> <span t-field="o.date_end"/></p>
                                <p><strong>Renovación Automática:</strong> 
                                    <span t-if="o.auto_renewal">Sí</span>
                                    <span t-if="not o.auto_renewal">No</span>
                                </p>
                            </div>
                        </div>

                        <!-- Signatures -->
                        <div class="row" style="margin-top: 100px;">
                            <div class="col-6 text-center">
                                <div style="border-top: 2px solid black; padding-top: 10px;">
                                    <strong>PRESTADOR DE SERVICIOS</strong><br/>
                                    <span t-field="o.company_id.name"/>
                                </div>
                            </div>
                            <div class="col-6 text-center">
                                <div style="border-top: 2px solid black; padding-top: 10px;">
                                    <strong>CLIENTE</strong><br/>
                                    <span t-field="o.legal_representative_name"/><br/>
                                    <span t-field="o.partner_id.name"/>
                                </div>
                            </div>
                        </div>

                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
