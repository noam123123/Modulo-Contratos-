<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="module_category_contratos" model="ir.module.category">
        <field name="name">Contratos Generales</field>
        <field name="description">Gesti√≥n integral de contratos generales personalizables</field>
        <field name="sequence">16</field>
    </record>

    <record id="group_contract_user" model="res.groups">
        <field name="name">Usuario de Contratos</field>
        <field name="category_id" ref="module_category_contratos"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Permite ver y leer contratos</field>
    </record>

    <record id="group_contract_manager" model="res.groups">
        <field name="name">Gestor de Contratos</field>
        <field name="category_id" ref="module_category_contratos"/>
        <field name="implied_ids" eval="[(4, ref('group_contract_user'))]"/>
        <field name="comment">Permite crear y modificar contratos</field>
    </record>

    <record id="group_contract_admin" model="res.groups">
        <field name="name">Administrador de Contratos</field>
        <field name="category_id" ref="module_category_contratos"/>
        <field name="implied_ids" eval="[(4, ref('group_contract_manager'))]"/>
        <field name="comment">Control total sobre contratos y configuraciones</field>
    </record>
</odoo>