<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Secuencia para contratos -->
        <record id="seq_contract_general" model="ir.sequence">
            <field name="name">Contratos Generales</field>
            <field name="code">contract.general</field>
            <field name="prefix">CON</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Tipos de contrato predefinidos -->
        <record id="contract_type_gps_basic" model="contract.type">
            <field name="name">Servicio GPS Básico</field>
            <field name="code">GPS_BASIC</field>
            <field name="description">Servicio básico de rastreo GPS con reportes estándar</field>
            <field name="category">service</field>
            <field name="default_duration">12</field>
            <field name="auto_renewal">True</field>
            <field name="default_monthly_fee">15000</field>
            <field name="default_setup_fee">25000</field>
            <field name="sequence">10</field>
        </record>

        <record id="contract_type_gps_premium" model="contract.type">
            <field name="name">Servicio GPS Premium</field>
            <field name="code">GPS_PREMIUM</field>
            <field name="description">Servicio premium de rastreo GPS con reportes avanzados y alertas</field>
            <field name="category">service</field>
            <field name="default_duration">12</field>
            <field name="auto_renewal">True</field>
            <field name="default_monthly_fee">25000</field>
            <field name="default_setup_fee">35000</field>
            <field name="sequence">20</field>
        </record>

        <record id="contract_type_device_sale" model="contract.type">
            <field name="name">Venta de Dispositivo GPS</field>
            <field name="code">DEVICE_SALE</field>
            <field name="description">Venta de dispositivo GPS con garantía</field>
            <field name="category">product</field>
            <field name="default_duration">24</field>
            <field name="auto_renewal">False</field>
            <field name="default_setup_fee">0</field>
            <field name="sequence">30</field>
        </record>

        <record id="contract_type_maintenance" model="contract.type">
            <field name="name">Contrato de Mantenimiento</field>
            <field name="code">MAINTENANCE</field>
            <field name="description">Servicio de mantenimiento preventivo y correctivo</field>
            <field name="category">maintenance</field>
            <field name="default_duration">12</field>
            <field name="auto_renewal">True</field>
            <field name="default_monthly_fee">8000</field>
            <field name="sequence">40</field>
        </record>
    </data>
</odoo>