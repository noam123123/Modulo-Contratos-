
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extensión de la vista formulario de contactos -->
    <record id="view_partner_form_contract_extension" model="ir.ui.view">
        <field name="name">res.partner.form.contract.extension</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Agregar botón de contratos -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_contracts" type="object" 
                        class="oe_stat_button" icon="fa-file-text-o"
                        attrs="{'invisible': [('contract_count', '=', 0)]}">
                    <field name="contract_count" widget="statinfo" string="Contratos"/>
                </button>
            </xpath>

            <!-- Campos para empresas -->
            <xpath expr="//field[@name='vat']" position="after">
                <field name="company_legal_name" attrs="{'invisible': [('is_company', '=', False)]}"/>
                <field name="company_registration" attrs="{'invisible': [('is_company', '=', False)]}"/>
                <field name="company_tax_id" attrs="{'invisible': [('is_company', '=', False)]}"/>
            </xpath>

            <!-- Campos para representantes legales -->
            <xpath expr="//page[@name='contact_addresses']" position="after">
                <page string="Información Legal" name="legal_info" 
                      attrs="{'invisible': [('is_company', '=', True)]}">
                    <group>
                        <group string="Representante Legal">
                            <field name="is_legal_representative"/>
                            <field name="legal_position" attrs="{'invisible': [('is_legal_representative', '=', False)]}"/>
                            <field name="legal_hierarchy" attrs="{'invisible': [('is_legal_representative', '=', False)]}"/>
                            <field name="legal_id_number" attrs="{'invisible': [('is_legal_representative', '=', False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Vista de búsqueda extendida -->
    <record id="view_partner_search_contract_extension" model="ir.ui.view">
        <field name="name">res.partner.search.contract.extension</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='customer']" position="after">
                <filter string="Representantes Legales" name="legal_representatives" 
                        domain="[('is_legal_representative', '=', True)]"/>
                <filter string="Con Contratos" name="with_contracts" 
                        domain="[('contract_count', '>', 0)]"/>
            </xpath>
        </field>
    </record>
</odoo>
