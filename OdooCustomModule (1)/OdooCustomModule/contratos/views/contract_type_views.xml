
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Contract Type Tree View -->
        <record id="contract_type_tree_view" model="ir.ui.view">
            <field name="name">contract.type.tree</field>
            <field name="model">contract.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="default_duration"/>
                    <field name="auto_renewal"/>
                    <field name="default_monthly_fee"/>
                    <field name="contract_count"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Contract Type Form View -->
        <record id="contract_type_form_view" model="ir.ui.view">
            <field name="name">contract.type.form</field>
            <field name="model">contract.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_contracts" icon="fa-file-text-o">
                                <field string="Contratos" name="contract_count" widget="statinfo"/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Nombre del tipo de contrato"/></h1>
                        </div>

                        <group>
                            <group>
                                <field name="code"/>
                                <field name="category"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="default_duration"/>
                                <field name="auto_renewal"/>
                                <field name="template_id"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Configuración Financiera">
                                <group>
                                    <group>
                                        <field name="currency_id"/>
                                        <field name="default_monthly_fee"/>
                                    </group>
                                    <group>
                                        <field name="default_setup_fee"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Descripción">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Contract Type Action -->
        <record id="action_contract_type" model="ir.actions.act_window">
            <field name="name">Tipos de Contrato</field>
            <field name="res_model">contract.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea tu primer tipo de contrato!
                </p>
                <p>
                    Los tipos de contrato definen las configuraciones por defecto
                    para diferentes clases de servicios o productos.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_contract_type"
                  name="Tipos de Contrato"
                  parent="menu_contract_config"
                  action="action_contract_type"
                  sequence="10"/>
    </data>
</odoo>
