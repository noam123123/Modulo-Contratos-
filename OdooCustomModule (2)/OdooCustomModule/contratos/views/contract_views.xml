<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario para contratos -->
    <record id="view_contract_form" model="ir.ui.view">
        <field name="name">contract.general.form</field>
        <field name="model">contract.general</field>
        <field name="arch" type="xml">
            <form string="Contrato">
                <header>
                    <button name="action_negotiate" type="object" string="Pasar a Negociación" 
                            states="new" class="oe_highlight"/>
                    <button name="action_validate" type="object" string="Hacer Vigente" 
                            states="negotiation" class="oe_highlight"/>
                    <button name="action_renew" type="object" string="Renovar" 
                            states="valid" class="oe_highlight"/>
                    <button name="action_terminate" type="object" string="Finiquitar" 
                            states="valid,renewed"/>
                    <button name="action_cancel" type="object" string="Cancelar" 
                            states="new,negotiation"/>
                    <button name="generate_contract_pdf" type="object" string="Generar PDF" 
                            states="negotiation,valid,renewed"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,negotiation,valid,renewed,terminated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                            <field name="invoice_count" widget="statinfo" string="Facturas"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="contract_type_id"/>
                            <field name="contract_manager_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="duration_months"/>
                            <field name="auto_renewal"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Información del Contrato">
                            <group>
                                <group string="Representante Legal">
                                    <field name="legal_contact_id" context="{'default_parent_id': partner_id}"/>
                                    <field name="legal_representative_name"/>
                                    <field name="legal_representative_position"/>
                                    <field name="legal_representative_hierarchy"/>
                                    <field name="legal_representative_id_number"/>
                                    <field name="legal_representative_email"/>
                                    <field name="legal_representative_phone"/>
                                </group>
                                <group string="Información Financiera">
                                    <field name="contract_value"/>
                                    <field name="monthly_fee"/>
                                    <field name="setup_fee"/>
                                    <field name="deposit"/>
                                    <field name="currency_id"/>
                                    <field name="billing_cycle"/>
                                    <field name="payment_method"/>
                                </group>
                            </group>
                            <group string="Descripción de Servicios">
                                <field name="service_description" nolabel="1"/>
                            </group>
                        </page>
                        
                        <page string="Líneas de Contrato">
                            <field name="contract_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Condiciones Especiales">
                            <field name="special_conditions" widget="html"/>
                        </page>
                        
                        <page string="Renovaciones">
                            <group>
                                <group>
                                    <field name="last_renewal_date" readonly="1"/>
                                    <field name="renewal_count" readonly="1"/>
                                </group>
                                <group>
                                    <field name="notification_2_months" readonly="1"/>
                                    <field name="notification_expiry" readonly="1"/>
                                    <field name="notification_renewal" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Notas Internas">
                            <field name="internal_notes" placeholder="Notas internas sobre el contrato..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista lista para contratos -->
    <record id="view_contract_tree" model="ir.ui.view">
        <field name="name">contract.general.tree</field>
        <field name="model">contract.general</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='new'" decoration-warning="state=='negotiation'" 
                  decoration-success="state=='valid'" decoration-muted="state=='terminated'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="contract_type_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="contract_value"/>
                <field name="state"/>
                <field name="auto_renewal"/>
            </tree>
        </field>
    </record>

    <!-- Vista búsqueda para contratos -->
    <record id="view_contract_search" model="ir.ui.view">
        <field name="name">contract.general.search</field>
        <field name="model">contract.general</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Número de Contrato"/>
                <field name="partner_id" string="Cliente"/>
                <field name="contract_type_id" string="Tipo"/>
                <field name="legal_representative_name" string="Representante"/>
                
                <filter name="active_contracts" string="Vigentes" domain="[('state', '=', 'valid')]"/>
                <filter name="expiring_soon" string="Por Vencer" 
                        domain="[('date_end', '&lt;=', (context_today() + datetime.timedelta(days=60)).strftime('%Y-%m-%d')), ('state', '=', 'valid')]"/>
                <filter name="auto_renewable" string="Autorenovables" domain="[('auto_renewal', '=', True)]"/>
                
                <separator/>
                <filter name="new_contracts" string="Nuevos" domain="[('state', '=', 'new')]"/>
                <filter name="negotiation" string="En Negociación" domain="[('state', '=', 'negotiation')]"/>
                <filter name="terminated" string="Finiquitados" domain="[('state', '=', 'terminated')]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Tipo de Contrato" name="group_type" context="{'group_by': 'contract_type_id'}"/>
                    <filter string="Mes de Vencimiento" name="group_month" context="{'group_by': 'date_end:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para contratos -->
    <record id="action_contract_general" model="ir.actions.act_window">
        <field name="name">Contratos</field>
        <field name="res_model">contract.general</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_contract_tree"/>
        <field name="search_view_id" ref="view_contract_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primer contrato!
            </p>
            <p>
                Los contratos te permiten gestionar acuerdos comerciales con empresas,
                incluyendo representantes legales, términos financieros y renovaciones automáticas.
            </p>
        </field>
    </record>
</odoo>